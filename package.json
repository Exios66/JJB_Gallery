{
  "name": "jjb-gallery",
  "version": "1.0.0",
  "description": "GitHub-Based Portfolio & Gallery - Multi-project repository with CrewAI, ChatUI, and various ML/AI integrations",
  "private": true,
  "workspaces": [
    "projects/ChatUi"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint:commits": "commitlint --from HEAD~1",
    "lint:commits:all": "commitlint --from origin/main",
    "format": "prettier --write \"**/*.{js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,yml,yaml}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build --workspace=projects/ChatUi",
    "dev": "npm run dev --workspace=projects/ChatUi",
    "clean": "rm -rf node_modules .husky/_ .cache dist build",
    "clean:disk": "bash scripts/npm/cleanup-disk-space.sh",
    "clean:resource-forks": "bash scripts/cleanup-macos-resource-forks.sh",
    "prevent:resource-forks": "bash scripts/prevent-resource-forks.sh",
    "setup:external": "bash scripts/setup-external-storage.sh",
    "verify:storage": "bash scripts/verify-external-storage.sh",
    "test:apis": "node scripts/npm/integrations.js",
    "examples": "node scripts/npm/examples.js",
    "postinstall": "husky install",
    "fix:css": "postcss assets/css/*.css --dir assets/css --replace || true",
    "render": "bash scripts/render_gh_pages.sh --no-clean",
    "render:clean": "bash scripts/render_gh_pages.sh --clean",
    "preview": "bash scripts/render_gh_pages.sh --no-clean --preview",
    "start": "npm run fix:css && npm run render && npm run preview",
    "start:clean": "npm run fix:css && npm run render:clean && npm run preview"
  },
  "keywords": [
    "portfolio",
    "gallery",
    "crewai",
    "chat-ui",
    "machine-learning",
    "data-science",
    "quarto",
    "jupyter"
  ],
  "author": "Jack J. Burleson <jackburleson.dev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Exios66/JJB_Gallery.git"
  },
  "bugs": {
    "url": "https://github.com/Exios66/JJB_Gallery/issues"
  },
  "homepage": "https://github.com/Exios66/JJB_Gallery#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@octokit/rest": "^20.1.1",
    "@types/node": "^20.11.5",
    "autoprefixer": "^10.4.20",
    "husky": "^9.0.11",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.4",
    "lint-staged": "^15.2.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "dotenv": "^16.4.1",
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}

