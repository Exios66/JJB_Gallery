{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "deps",
        "config"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "crewai",
        "chatui",
        "litellm",
        "quarto",
        "jupyter",
        "deps",
        "docs",
        "ci",
        "scripts",
        "config",
        "root"
      ]
    ],
    "subject-case": [2, "never", ["upper-case", "pascal-case", "start-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "type-case": [2, "always", "lower-case"],
    "type-empty": [2, "never"]
  }
}

